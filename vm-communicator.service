[Unit]
Description=VM-communicator-module-listener-service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
EnvironmentFile=/etc/systemd/system/vm-communicator.env
ExecStart=/etc/virtualab/vm-communicator/./vm-communicator.sh

[Install]
WantedBy=multi-user.target